extends ../../../../../../../views/layouts/default.pug

block content
  .jumbotron
    h1 Login
  .row
    form.col.s12(method='post' action=`/users/login${from ? `?from=${from}` : ''}`)
      .row
        .input-field.col.s6
          input#email.validate(type='email' name='email' value=`${body ? body.email : ''}`)
          label(for='email') Email
      .row
        .input-field.col.s6
          input#password.validate(type='password' name='password')
          label(for='password') Password
      .row
        .input-field.col.s6
          button.btn.waves-effect.waves-ligh.blue.darken-2(type='submit' name='action')
            | Login
            i.material-icons.right send

  include ../../../../../../../views/partials/toast.pug
